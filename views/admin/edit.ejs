<form action="/Edit-blog/<%= data._id %>" method="post"  >
    <div class="row">
        <div class="col-sm-6 col-12">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" value="<%= data.name %>" name="name" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        <div class="col-sm-6 col-12">
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" value="<%= data.author %>" name="author" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        <div class="col-sm-0 col-12">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" value="<%= data.title %>" name="title" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        <div class="col-sm-0 col-12">
            <div class="form-group">
                <label for="title">Image</label>
                <input type="file"  name="image" class="form-control" placeholder="Enter full name">
                <img src="/<%= data.image %>" alt="" width="150px" height="100px" srcset="">
            </div>
            <input type="hidden" value="<%= data.image %>" name="old_image" class="form-control" placeholder="Enter full name">
        </div>
        <div class="col-sm-0 col-12">
            <div class="form-group">
                <label for="body">Content</label>
                <textarea class="form-control" name="body" id="exampleFormControlTextarea1" rows="3"> <%= data.body %></textarea>
                <!-- <input type="text" class="" name="body"> -->
            </div>
        </div>
        <div class="col-sm-0 col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <!-- <input type="text" class="summernote"> -->
    </div>
</form>
<!-- Row end -->