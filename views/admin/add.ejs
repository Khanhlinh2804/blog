<form action="/Add-post" method="post" enctype="multipart/form-data" >
    <div class="row">
        <div class="col-sm-6 col-12">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        <div class="col-sm-6 col-12">
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" name="author" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        <div class="col-sm-0 col-12">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        <div class="col-sm-0 col-12">
            <div class="form-group">
                <label for="title">Image</label>
                <input type="file" name="image" class="form-control" placeholder="Enter full name">
            </div>
        </div>
        
        <div class="col-sm-0 col-12">
            <div class="form-group">
                <label for="body">Content</label>
                <textarea class="form-control" name="body" id="exampleFormControlTextarea1" rows="3"></textarea>
                <!-- <input type="text" class="" name="body"> -->
            </div>
        </div>
        <div class="col-sm-0 col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <!-- <input type="text" class="summernote"> -->
    </div>
</form>
<!-- Row end -->